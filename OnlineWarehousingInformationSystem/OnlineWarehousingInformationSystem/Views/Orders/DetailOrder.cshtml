
@{
    ViewBag.Title = "DetailOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table>

    @foreach (var item in Model)
    {
        <div class="row gutters-sm">

            <div class="row">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="col-md-10">
                            <h3>Order Details</h3>
                        </div>
                        <div class="col-md-2">
                            <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Orders")'" />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="card mt-3">
                                <h4>Payment Information</h4>
                                @foreach (var i in item.Payments)
                                {
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Invoice ID</h6>
                                            <span class="text-secondary">@i.invoiceID</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Payment Type</h6>
                                            <span class="text-secondary">@i.paymentType</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Amount</h6>
                                            <span class="text-secondary">@i.amount</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Operation Date</h6>
                                            <span class="text-secondary">@i.operationDate</span>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <hr />

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Order ID</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.orderID
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Warehouse ID</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.warehouseID
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Description</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.orderDescription
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Order Date</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.orderDate
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    }
</table>


