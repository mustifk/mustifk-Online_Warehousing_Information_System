
@{
    ViewBag.Title = "DetailPackage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="row align-items-center">
        <div class="col-md-12">
            <div class="col-md-3">
                <h3>Package Contents - #@ViewBag.id</h3>
            </div>
            <div class="row col-md-9 text-right">
                <ul>
                    <li style="text-decoration:none;display:inline-block">
                        <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Packages")'" />
                    </li>
                    <li style="text-decoration:none;display:inline-block">
                        <input type="button" class="btn btn-primary" value="Add Product" onclick="location.href='@Url.Action("AddProduct", "Packages", new { packageID = ViewBag.id})'" />
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover ">
        <thead style="font-weight:700;font-size:110%;">
            <tr>
                <td>Product ID</td>
                <td>Product Name</td>
                <td>Product Image</td>
                <td>Quantity</td>
                <td>Operation</td>
            </tr>
        </thead>
        <hr />
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.productID</td>
                    <td>@item.Products.productName</td>
                    <td>@item.Products.productImage</td>
                    <td>@item.productQuantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>


