@model OnlineWarehousingInformationSystem.Models.PackageContents
@{
    ViewBag.Title = "UpdateQuantity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Product Quantity</h2>


@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.productID)
        @Html.HiddenFor(model => model.packageID)
        <div class="form-group">
            <b class="control-label col-md-2">Product Quantity</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.productQuantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.productQuantity, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
}

