@model OnlineWarehousingInformationSystem.Models.Bills
@{
    ViewBag.Title = "AddBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function validateForm() {
        var id = document.getElementById("invoiceID").value;
        var type = document.getElementById("type").value;
        var amount = document.getElementById("amount").value;
        if (id == "" || type == "" || amount == "") {
            alert("Please fill in mandatory fields");
            return false;
        }
        if (id.length > 10) {
            var error = "Max limit is 10";
            document.getElementById("id_error").innerHTML = error;
            return false;
        }
        if (type.length > 15) {
            var error = "Max limit is 15";
            document.getElementById("type_error").innerHTML = error;
            return false;
        }
        return Form.submit();
    }
</script>

<div class="row">
    <div class="row align-items-center">
        <div class="col-md-12">
            <div class="col-md-10">
                <h3>Add Bill</h3>
            </div>
            <div class="col-md-2">
                <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Shipments")'" />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Bill</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.shipmentID)
    @Html.HiddenFor(model => model.billID)
    @Html.HiddenFor(model => model.operationDate)
    <div class="form-group">
        <b class="control-label col-md-2">Invoice ID</b>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.invoiceID, new { id = "invoiceID", style = "border:groove 1px gray;border-radius:5px;height:30px;width:600px;" })
            <span class="error"><b id="id_error"></b></span>
        </div>
    </div>

    <div class="form-group">
        <b class="control-label col-md-2">Payment Type</b>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.paymentType, new { id = "type", style = "border:groove 1px gray;border-radius:5px;height:30px;width:600px;" })
            <span class="error"><b id="type_error"></b></span>
        </div>
    </div>

    <div class="form-group">
        <b class="control-label col-md-2">Amount</b>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.amount, new { id = "amount", style = "border:groove 1px gray;border-radius:5px;height:30px;width:600px;" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-success" onclick="return validateForm();" />
        </div>
    </div>
</div>
}
