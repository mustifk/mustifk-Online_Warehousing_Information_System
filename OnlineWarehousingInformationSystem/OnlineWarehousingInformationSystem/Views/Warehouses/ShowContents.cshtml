
@{
    ViewBag.Title = "ShowContents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="row align-items-center">
        <div class="col-md-10">
            <h3>Warehouses Contents</h3>
        </div>
        <div class="col-md-2">
            <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Warehouses")'" />
        </div>

    </div>
</div>


<div class="table-responsive">
    <table class="table table-hover ">
        <thead style="font-weight:700;font-size:110%;">
            <tr>
                <td>Warehouse ID</td>
                <td>Product ID</td>
                <td>Quantity</td>
            </tr>
        </thead>
        <hr />
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td scope="row">@item.warehouseID</td>
                    <td>@item.productID</td>
                    <td>@item.quantity</td>
                    <td>
                        @Html.ActionLink("Detail Product", "DetailProduct", "Products", new { id = item.productID }, null)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

